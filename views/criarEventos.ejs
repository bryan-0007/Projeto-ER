<!DOCTYPE html>
<head>
    <%-include('./partials/headProfessor')%>
</head>
<body>
    <div class="card" style="height:75vh; width: 80vh; position: relative; top:6vh; left:60vh;background-color:rgb(192, 192, 222);">
		<div class="card-body">
            <header class="join-header2">
                <h1>Criar Eventos</h1>
            </header>
            <br>
            <form action="criaEvento" method="post">
                <label class="form-label" for="nomeDeEvento"
                >Nome do Evento:</label
            >
            <input
                class="form-control"
                id="nomeDeEvento"
                type="text"
                name="nomeDeEvento"
                required
            />
            <br>


            <label class="form-label" for="descricao"
                >Descrição do Evento:</label
            >
            <input
                class="form-control"
                id="descricao"
                type="text"
                name="descricao"
                required
            />
            <br>
            <label class="form-label" for="Disciplina"
                >Escolher Disciplina:</label
            >
            <select style="height:5vh;font-size:2vh" name="Disciplina" class="form-select" aria-label="Default select example">
                <%listaDeDisciplinas.forEach(Disciplinas=>{%>
                <%=console.log(Disciplinas.nome)%>
                <option name=<%=Disciplinas.nome%> value=<%=Disciplinas.nome%>><%=Disciplinas.nome%></option>
                <%})%>
            </select>
            <br>
            <div class="col-xs-7" style="position:relative; left:8vh;">
                <label for="name">Data</label>
                <input type="date" style="height:3vh" class="form-control-lg p-3"  id="data" name="data" value=""><br>
            </div>
            <div class="col-sm">
                <label for="tempo">Hora</label>
                <input type="time" style="height:3vh" class="form-control-lg p-3" id="tempo" name="tempo" value=""><br>
            </div>
            <br>
			<div style="text-align: center;">
                <button class="button-blue2">Submit</button>
			</div>
		</form> 
        </div>
    </div>

</body>
</html>